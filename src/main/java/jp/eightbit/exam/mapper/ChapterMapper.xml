<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.eightbit.exam.mapper.ChapterMapper">
  <select id="findAll" resultType="jp.eightbit.exam.entity.Chapter">
    select * from chapter where workbook_id = #{workbookId}
  </select>

  <select id="findOne" resultType="jp.eightbit.exam.entity.Workbook">
    select * from chapter where id = #{id}
  </select>

  <insert id="save" useGeneratedKeys="true" keyProperty="id">
    insert into chapter(number, name) values(#{number}, #{name})
  </insert>

  <update id="update">
    update chapter set number=#{number}, name=#{name} where id= #{id}
  </update>

  <delete id="delete">
    delete from capter where id = #{id}
  </delete>
</mapper>